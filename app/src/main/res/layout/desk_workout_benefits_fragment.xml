<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.workoutBenefits.DeskWorkoutBenefits">

    <LinearLayout
        android:id="@+id/workoutRoutineLayout"
        style="@style/ButtonBlueOval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_half"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workoutNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/title_h3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="@dimen/margin_half"
            android:src="@drawable/ic_workout_benefits" />

        <TextView
            android:id="@+id/workoutDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/title_h4"
            android:text="@string/benefits_text"/>
    </LinearLayout>
</FrameLayout>